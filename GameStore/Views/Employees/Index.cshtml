@{
  Layout = "_Layout";
}

@using GameStore.Models;

<h1>Employees</h1>

@if (@Model.Count == 0)
{
  <h3>No employees have been added yet!</h3>
}

<ul>
  @foreach(Employee employee in Model)
  {
    <li>@Html.ActionLink($"{employee.EmployeeName}", "Details", new { id = employee.EmployeeId })</li>
  }
</ul>

<div id="footer">
  <button class="bottom">@Html.ActionLink("Home", "Index", "Home")</button>
  <button class="bottom">@Html.ActionLink("Add new employee", "Create")</button>
</div>
