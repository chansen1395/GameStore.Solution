@{
  Layout = "_Layout";
}

@using System.Security.Claims
@using GameStore.ViewModels
@model LoginViewModel

<h2>Account Page</h2>
<hr />

@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-danger" value="Log out" />
    }
}
else
{
    @using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { required = "required"})
    <br>
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { required = "required"})
    <br>
    <input type="submit" value="Login" class="btn btn-primary" />
}
    <button class = "btn btn-warning">@Html.ActionLink("Register", "Register")</button>
    @* <p>@Html.ActionLink("Log in", "Login")</p> *@
}
<div id="footer">
<button class="bottom">@Html.ActionLink("Home", "Index", "Home")</button>
</div>