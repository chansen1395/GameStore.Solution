@{
  Layout = "_Layout";
}

@using GameStore.Models;

<h1>Games</h1>

@if (@Model.Count == 0)
{
  <h3>No Games have been added yet!</h3>
}

<ul>
  @foreach(Game game in Model)
  {
    <li>@Html.ActionLink($"{game.GameName}", "Details", new { id = game.GameId })</li>
  }
</ul>

<div id="footer">
  <button class="bottom">@Html.ActionLink("Home", "Index", "Home")</button>
  <button class="bottom">@Html.ActionLink("Add new game", "Create")</button>
</div>